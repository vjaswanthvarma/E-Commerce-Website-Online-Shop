  <style>
    * {
  box-sizing: border-box;
}
    h3{
      color:black;
      font-family: 'Times New Roman', Times, serif;
      font-weight: bold;
    }
    #log:hover{
      color:red;
    }
    #logos{
      position: relative;
      color:green;
      width:100%;
      height:5vh;
      text-align: center;
      padding-left:10px;
      background-color:antiquewhite;
    }
    #account{
      background-color:aquamarine
    }
    .accounts{
      top:100px;
    }
    #Logout{
      color:black;
    }
    #logo{
      position: relative;
      left:15px;
      border-radius:10px;
    }
    .logout{
      display: flex;
      position: relative;
      top:150px;
    }
    #delete{
      position: relative;
      top:200px;
      text-decoration:none;}
    .userdata{
      position: relative;
      top:100px;
      background-color:greenyellow;
